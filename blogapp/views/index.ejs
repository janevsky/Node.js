<%- include('partials/header') %>
    <% blogPosts.forEach(blogPost => { %>
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">
                    <a href="/<%= blogPost.slug %>">
                        <%= blogPost.title %>
                    </a>
                </h5>
                <h6 class="card-subtitle mb-2 text-muted">by
                    <%= blogPost.author.name %>
                </h6>
                <h6 class="card-subtitle mb-2 text-muted">
                    <%= blogPost.view_count %> views</h6>
                <p class="card-text">
                    <%= blogPost.content %>
                </p>
                <a class="card-link" href="/blogposts/<%= blogPost._id %>">Edit</a>
                <a class="card-link" href="javascript:;" onclick="deleteBlogPost(`<%= blogPost._id %>`)">Delete</a>
            </div>
        </div>
        <% }) %>
            <%- include('partials/footer') %>